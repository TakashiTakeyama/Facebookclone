<div class="container">
  <h1>ログインしてください</h1>
  <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>

    <p>
    <%= f.label :email %>
    <%= f.email_field :email %>
    </p>
    <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
    </p>
    <p>
    <%= f.submit "ログイン" %>
    </p>
  <% end %>
</div>
